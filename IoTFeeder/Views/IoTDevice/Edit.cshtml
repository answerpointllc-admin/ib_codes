@using IoTFeeder.Common.Common
@model IoTFeeder.Common.Models.IoTDeviceViewModel
@{
    ViewData["Title"] = "Edit IoT Device";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="toolbar" id="kt_toolbar">
    <div class="container-fluid d-flex flex-stack flex-wrap flex-sm-nowrap">
        <div class="breadcrumb-header justify-content-between">
            <div class="left-content">
                <h1 class="main-content-title tx-24 mg-b-1 mg-b-lg-1">
                    Edit IoT Device
                    <small class="text-muted fs-6 fw-normal ms-1"></small>
                </h1>
                <partial name="_BreadCrumb" />
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form class="form" asp-action="Edit" method="post" asp-controller="IoTDevice" id="editblogform" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label>Device name <span class="text-danger">*</span></label>
                        <input type="text" asp-for="DeviceName" maxlength="100" class="form-control" placeholder="Device name">
                        <span asp-validation-for="DeviceName" class="text-danger"></span>
                    </div>
                </div>
                </div>
                 <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label asp-for="Description">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" class="form-control" cols="3" placeholder="Description" maxlength="250"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-lg-6">
                    <div class="form-group">
                        <label asp-for="IsActive" class="control-label ">Status</label>
                        <div class="">
                            <label>
                                <input type="radio" asp-for="IsActive" value="true" /> Active
                            </label>

                            <label>
                                <input type="radio" asp-for="IsActive" value="false" /> Inactive
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="btnUpdate">
                    Update
                </button>
                <a asp-action="Index" class="btn btn-custom m-1">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
<script src="@Url.Content("~/js/custom/IoTDevice.js")"></script>
}